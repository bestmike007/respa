{
  "compilerOptions": {
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
